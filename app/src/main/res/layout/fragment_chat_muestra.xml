<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.ChatMuestraFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#F1CD61"
            android:outlineSpotShadowColor="#000000"
            tools:ignore="UnusedAttribute">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageViewAccountChatJesus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="16dp"
                android:contentDescription="@string/accountphoto"
                android:scaleType="centerCrop"
                android:src="@drawable/jesus"
                app:civ_border_color="#66BB6A"
                app:civ_border_color_direction="top_to_bottom"
                app:civ_border_color_end="@color/cardview_shadow_end_color"
                app:civ_border_width="2dp"
                tools:ignore="PrivateResource" />

            <TextView
                android:id="@+id/textViewChatJesus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="#E4C66D"
                android:padding="6dp"
                android:text="@string/holaaa"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutChatResponse"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            android:background="#66BB6A"
            android:outlineSpotShadowColor="#000000"
            tools:ignore="UnusedAttribute">


            <TextView
                android:id="@+id/textViewChatOwner"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="#5AA85B"
                android:padding="6dp"
                android:text="@string/holaaa"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageViewAccountChatOwner"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="16dp"
                android:contentDescription="@string/accountphoto"
                android:scaleType="centerCrop"
                android:src="@drawable/jesus"
                app:civ_border_color="#66BB6A"
                app:civ_border_color_direction="top_to_bottom"
                app:civ_border_color_end="@color/cardview_shadow_end_color"
                app:civ_border_width="2dp"
                tools:ignore="PrivateResource" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66BB6A"
            android:layout_marginTop="320dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:inputType="textPersonName"
                android:textColorHint="@color/colorAccent"
                android:hint="@string/escribe_tu_mensaje" />

            <ImageButton
                android:id="@+id/imageButtonResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_send_black_24dp"
                android:background="#00FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>